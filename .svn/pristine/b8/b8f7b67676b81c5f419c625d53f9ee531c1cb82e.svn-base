              //  self.reradJson()
                arrOfShowData = getJson(fileName: "countries")["countries"] as! [Any]
                self.openDwopDown( txtField: self.txtField_Country, arr: arrOfShowData)
                
            }else{
                self.removeOptionalView()
            }
           
            break
        case 6:
            if(self.optionalVw == nil){
                
